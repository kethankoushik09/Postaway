    "paths": {
        "/api/user/signup": {
            "post": {
                "tags": ["User"],
                "summary": "User Signup",
                "description": "Register a new user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User credentials",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "name":{"type":"string"},
                                "email": { "type": "string" },
                                "password": { "type": "string" }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "User registered successfully" },
                    "400": { "description": "Invalid input" }
                }
            }
        },



        "/api/user/signin": {
            "post": {
                "tags": ["User"],
                "summary": "User Signin",
                "description": "Authenticate a user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User credentials",
                        "schema": {
                            "type": "object",
                            "properties": {
