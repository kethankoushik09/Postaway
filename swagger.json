{
    "swagger": "2.0",



    "info": {
        "title": "Postaway",
        "description": "Postaway API Documentation",
        "version": "1.0.0"
    },


    "host": "localhost:3000",
    "securityDefinitions": {
        "JWT": {
            "in": "header",
            "name": "Authorization",
